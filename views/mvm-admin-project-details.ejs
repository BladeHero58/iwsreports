<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MVM Xpert Projekt Részletek - <%= project.name %></title>
    <link rel="stylesheet" href="/css/pages/mvm-user-project-details.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
</head>
<body>

    <header>
        <form action="/admin/projects" method="GET">
            <button type="submit" class="back-button">
                <i class="fas fa-arrow-left"></i> Vissza
            </button>
        </form>
    </header>

    <div class="container">
        <!-- Projekt információk -->
        <div class="project-info">
            <h1>MVM Xpert Projekt: <%= project.name %></h1>
            <p>Állapot: **<%= project.status %>**</p>
            <p>Projekt azonosító: **<%= project.id %>**</p>
            <p>Típus: **<%= project.project_type %>**</p>
            <p><strong>Leírás:</strong></p>
            <div class="project-description"><%= project.description %></div>
        </div>

        <!-- Szerkesztés gomb -->
        <div class="edit-section">
            <a href="/admin/projects/edit/<%= project.id %>" class="btn-edit">
                <i class="fas fa-pen-to-square"></i> Projekt szerkesztése
            </a>
        </div>

        <!-- Kategóriák -->
        <div class="categories-section">
            <h2>Munkavédelmi Ellenőrzési Kategóriák</h2>

            <div class="card-container">
                <% 
                // A Munkavédelmi Ellenőrzési Kategóriák listája
                const categories = [
                    { id: 1, name: "Dokumentáció", desc: "Munkaterület felelős, engedélyek, tervdokumentációk" },
                    { id: 2, name: "Személyi feltételek", desc: "Oktatások, vizsgák, alkalmassági vizsgálatok, megbízások" },
                    { id: 3, name: "Munkakörnyezet", desc: "Munkapályák, szociális feltételek, kitakarítás, tárolási feltételek" },
                    { id: 4, name: "Munkagépek, munkaeszközök", desc: "Üzembe helyezés, felülvizsgálatok, védőberendezések, állványok" },
                    { id: 5, name: "Villamos biztonság", desc: "Biztonsági vizsgálatok, áramvédelmi kapcsolók, földelés, IP védettség" },
                    { id: 6, name: "Egyéni védekezőszerek", desc: "Rendelkezésre állás, használat, állapot, védelmi képesség" },
                    { id: 7, name: "Elsősegélynyújtás", desc: "Elsősegélynyújtó helyek, személyek, műszaki mentés, EU táskák" },
                    { id: 8, name: "Veszélyes anyagok", desc: "Nyilvántartás, biztonsági adatlapok, tárolási feltételek, felhasználás" },
                    { id: 9, name: "Elmaradt cselekedetek", desc: "Alkohol szonda, rendkívüli oktatások, dokumentáció" },
                    { id: 10, name: "Egyéb", desc: "Tisztító közegek, figyelem, kommunikáció, természetvédelem" },
                ];

                categories.forEach(cat => { 
                    // Az URL-ben átadjuk a project.id-t és a category.id-t is.
                    // A kategória ID (pl. 1) alapján a backend dönt a sablonról.
                %>
                    <div class="check-card">
                        <div>
                            <div class="card-header">
                                <span class="number"><%= cat.id %></span>
                                <span><%= cat.name %></span>
                            </div>
                            <div class="card-description"><%= cat.desc %></div>
                        </div>
                        <a href="/projects/<%= project.id %>/new-report?category=<%= cat.id %>" class="mvm-btn">
                            <i class="fas fa-list-check"></i>  
                            Ellenőrzés indítása
                        </a>
                    </div>
                <% }); %>
            </div>
        </div>

        <!-- Hozzárendelt felhasználók -->
        <div class="users-section">
            <h3>Hozzárendelt felhasználók:</h3>
            <% if (project.assignedUsers && project.assignedUsers.length > 0) { %>
                <ul class="users-list">
                    <% project.assignedUsers.forEach(user => { %>
                        <li>
                            <span class="user-name"><%= user.username %></span>
                            <form action="/admin/projects/<%= project.id %>/remove-user/<%= user.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn-remove">
                                    <i class="fas fa-trash"></i> Eltávolítás
                                </button>
                            </form>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p class="no-users">Nincsenek hozzárendelve felhasználók.</p>
            <% } %>

            <!-- Felhasználó hozzárendelése -->
            <div class="assign-form">
                <h3>Felhasználó hozzárendelése:</h3>
                <form action="/admin/projects/<%= project.id %>/assign-users" method="POST">
                    <div class="form-group">
                        <select name="assignedUsers" id="assignedUsers" multiple size="10">
                            <% users.forEach(user => { %>
                                <option value="<%= user.id %>" 
                                    <%= project.assignedUsers && project.assignedUsers.some(assignedUser => assignedUser.id === user.id) ? 'selected' : '' %>>
                                    <%= user.username %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <button type="submit" class="btn-assign">
                        <i class="fas fa-user-plus"></i> Felhasználók hozzárendelése
                    </button>
                </form>
            </div>
        </div>

        <!-- Statisztikák -->
        <div class="statistics-section">
            <h2>Statisztikák</h2>
            <div class="statistics">
                <div class="stat-box">
                    <div class="stat-value">0</div>
                    <div class="stat-label">Elvégzett ellenőrzések</div>
                </div>
                <div class="stat-box">
                    <div class="stat-value">0</div>
                    <div class="stat-label">Megfelelő pontok</div>
                </div>
                <div class="stat-box">
                    <div class="stat-value">0</div>
                    <div class="stat-label">Nem megfelelő pontok</div>
                </div>
                <div class="stat-box">
                    <div class="stat-value">0</div>
                    <div class="stat-label">Nem vizsgált pontok</div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>