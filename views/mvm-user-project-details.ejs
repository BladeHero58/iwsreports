<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MVM Xpert Projekt Részletek - <%= project.name %></title>
    <link rel="stylesheet" href="/css/style.css"> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <style>
        /* EGYÉNI STÍLUSOK CSAK EHHEZ A LAPHOZ */
        .card-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }
        .check-card {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            min-height: 180px;
        }
        .card-header {
            font-size: 1.1em;
            font-weight: 600;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }
        .card-header span {
            margin-left: 10px;
        }
        .card-description {
            color: #555;
            font-size: 0.9em;
            margin-bottom: 15px;
        }
        .mvm-btn {
            background-color: #ff6a00; /* Az MVM gomb színére hasonlító narancs */
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
            font-weight: 600;
            transition: background-color 0.3s;
        }
        .mvm-btn:hover {
            background-color: #e65c00;
        }
        .statistics {
            display: flex;
            justify-content: space-around;
            text-align: center;
            margin-top: 40px;
            padding: 20px;
            border-top: 1px solid #ddd;
        }
        .stat-box {
            padding: 15px;
            border-radius: 5px;
            flex: 1;
            margin: 0 10px;
            background: #f7f7f7;
        }
        .stat-value {
            font-size: 2em;
            font-weight: 700;
            margin-bottom: 5px;
        }
        .stat-label {
            font-size: 0.9em;
            color: #555;
        }
    </style>
</head>
<body>

    <header>
        <form action="/user/projects" method="GET">
        <button type="submit" class="logout-btn"><i class="fas fa-arrow-left"></i> Vissza a projektekhez</button>
    </form>
    </header>

    <h1>MVM Xpert Projekt: <%= project.name %></h1>
    <p>Állapot: **<%= project.status %>**</p>
    <p>Projekt azonosító: **<%= project.id %>**</p>
    <p>Típus: **<%= project.project_type %>**</p>
    <p><strong>Leírás:</strong></p>
    <div class="project-description"><%= project.description %></div>

    <section>
        <!-- Szerkesztés gomb -->
        <a href="/user/projects/edit/<%= project.id %>">
            <button type="submit" class="btn"><i class="fas fa-pen-to-square"></i> Projekt szerkesztése</button>
        </a>
    </section>
    
    <hr>

    <h2>Munkavédelmi Ellenőrzési Kategóriák</h2>

    <div class="card-container">

        <% 
        // A Munkavédelmi Ellenőrzési Kategóriák listája
        const categories = [
            { id: 1, name: "Dokumentáció", desc: "Munkaterület felelős, engedélyek, tervdokumentációk" },
            { id: 2, name: "Személyi feltételek", desc: "Oktatások, vizsgák, alkalmassági vizsgálatok, megbízások" },
            { id: 3, name: "Munkakörnyezet", desc: "Munkapályák, szociális feltételek, kitakarítás, tárolási feltételek" },
            { id: 4, name: "Munkagépek, munkaeszközök", desc: "Üzembe helyezés, felülvizsgálatok, védőberendezések, állványok" },
            { id: 5, name: "Villamos biztonság", desc: "Biztonsági vizsgálatok, áramvédelmi kapcsolók, földelés, IP védettség" },
            { id: 6, name: "Egyéni védekezőszerek", desc: "Rendelkezésre állás, használat, állapot, védelmi képesség" },
            { id: 7, name: "Elsősegélynyújtás", desc: "Elsősegélynyújtó helyek, személyek, műszaki mentés, EU táskák" },
            { id: 8, name: "Veszélyes anyagok", desc: "Nyilvántartás, biztonsági adatlapok, tárolási feltételek, felhasználás" },
            { id: 9, name: "Elmaradt cselekedetek", desc: "Alkohol szonda, rendkívüli oktatások, dokumentáció" },
            { id: 10, name: "Egyéb", desc: "Tisztító közegek, figyelem, kommunikáció, természetvédelem" },
        ];

        categories.forEach(cat => { 
            // Az URL-ben átadjuk a project.id-t és a category.id-t is.
            // A kategória ID (pl. 1) alapján a backend dönt a sablonról.
        %>
            <div class="check-card">
                <div>
                    <div class="card-header">
                        <span style="color: #007bff;"><%= cat.id %>.</span> 
                        <span><%= cat.name %></span>
                    </div>
                    <div class="card-description"><%= cat.desc %></div>
                </div>
                <a href="/projects/<%= project.id %>/new-report?category=<%= cat.id %>" class="mvm-btn"><i class="fas fa-list-check"></i>  
                    Ellenőrzés indítása
                </a>
            </div>
        <% }); %>

        
    </div>

    <h2>Statisztikák</h2>
    <div class="statistics">
        <div class="stat-box">
            <div class="stat-value" style="color: #007bff;">0</div>
            <div class="stat-label">Elvégzett ellenőrzések</div>
        </div>
        <div class="stat-box">
            <div class="stat-value" style="color: #28a745;">0</div>
            <div class="stat-label">Megfelelő pontok</div>
        </div>
        <div class="stat-box">
            <div class="stat-value" style="color: #dc3545;">0</div>
            <div class="stat-label">Nem megfelelő pontok</div>
        </div>
        <div class="stat-box">
            <div class="stat-value" style="color: #ffc107;">0</div>
            <div class="stat-label">Nem vizsgált pontok</div>
        </div>
    </div>

</body>
</html>