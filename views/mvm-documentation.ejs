                    if (exifrData) {
                        // ‚≠ê D√ÅTUM kinyer√©se (KRITIKUS!)
                        const photoDate = exifrData.DateTimeOriginal ||
                                         exifrData.DateTime ||
                                         exifrData.CreateDate ||
                                         file.lastModified;

                        // ‚≠ê ELS≈ê: rawGPS objektum (exifr.gps() direkt met√≥dus)
                        if (rawGPS && typeof rawGPS.latitude === 'number' && !isNaN(rawGPS.latitude)) {
