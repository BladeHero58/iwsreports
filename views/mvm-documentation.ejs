function draw(e) {
    if (!isDrawing) return;
    
    const rect = canvas.getBoundingClientRect();
    const scaleX = canvas.width / rect.width;
    const scaleY = canvas.height / rect.height;
    
    ctx.lineTo(
        (e.clientX - rect.left) * scaleX,
        (e.clientY - rect.top) * scaleY
    );
    ctx.stroke();
}

        // Rajzol√°s befejez√©se
        function stopDrawing() {
    if (isDrawing) {
        ctx.closePath();
    }
    isDrawing = false;
}

